                            <ContentControl.Content>
                                <TextBlock 
                                    Foreground="Firebrick" 
                                    FontFamily="{StaticResource CustomFontTangerineRegular}"
                                    FontSize="80"
                                    Text="{Binding Name}" 
                                    HorizontalAlignment="Center"
                                    Margin="5" >
                                </TextBlock>
                            </ContentControl.Content>
                        </ContentControl>
                        <!--<Image 
                            Source="/Assets/Curly.png" 
